<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="Rollen - Edit"
        focusComponent="form">
    <data>
        <instance id="roleDc"
                  class="ch.so.agi.simi.entity.iam.Role">
            <view extends="_local">
                <property name="users" view="_local"/>
                <property name="groups" view="_local"/>
            </view>
            <loader/>
            <collection id="usersDc" property="users"/>
            <collection id="groupsDc" property="groups"/>
        </instance>
    </data>
    <dialogMode height="auto"
                width="auto"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="roleDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <textArea id="remarksField" property="remarks" rows="5"/>
            </column>
        </form>
        <groupBox id="groupsBox" caption="msg://ch.so.agi.simi.entity.iam/Role.groups">
            <table id="groupsTable" dataContainer="groupsDc" width="100%" height="200px" multiselect="true">
                <actions>
                    <action id="add" type="add"/>
                    <action id="exclude" type="exclude"/>
                </actions>
                <columns>
                    <column id="identifier"/>
                </columns>
                <buttonsPanel>
                    <button action="groupsTable.add" stylename="friendly"/>
                    <button action="groupsTable.exclude"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <groupBox id="usersBox" caption="msg://ch.so.agi.simi.entity.iam/Role.users">
            <table id="usersTable" dataContainer="usersDc" width="100%" height="200px" multiselect="true">
                <actions>
                    <action id="add" type="add"/>
                    <action id="exclude" type="exclude"/>
                </actions>
                <columns>
                    <column id="instanceName" caption="Benutzer"/>
                </columns>
                <buttonsPanel>
                    <button action="usersTable.add" stylename="friendly"/>
                    <button action="usersTable.exclude"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
