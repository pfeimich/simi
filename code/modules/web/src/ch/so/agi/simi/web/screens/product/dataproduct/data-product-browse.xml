<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://dataProductBrowse.caption"
        focusComponent="dataProductsTable"
        messagesPack="ch.so.agi.simi.web.screens.product.dataproduct">
    <data readOnly="true">
        <collection id="dataProductsDc"
                    class="ch.so.agi.simi.entity.product.DataProduct">
            <view extends="_local">
                <property name="pubScope" view="_minimal">
                    <property name="displayText"/>
                </property>
            </view>
            <loader id="dataProductsDl">
                <query>
                    <![CDATA[select e from simi_DataProduct e]]>
                    <condition>
                        <or>
                            <c:jpql>
                                <c:where>e.identifier like :term</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.title like :term</c:where>
                            </c:jpql>
                        </or>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="dataProductsTable"
            spacing="true">
        <table id="dataProductsTable"
               width="100%"
               multiselect="true"
               dataContainer="dataProductsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="identifier"/>
                <column id="title"/>
                <column id="pubScope"/>
                <column id="releasedAt"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <popupButton id="createBtn" caption="Erstellen" stylename="friendly" icon="ADD_ACTION">
                    <actions>
                        <action id="createMap" caption="Map erstellen"/>
                        <action id="createLayerGroup" caption="LayerGroup erstellen"/>
                        <action id="createSingleActor" caption="SingleActor erstellen"/>
                    </actions>
                </popupButton>
                <button id="editBtn" action="dataProductsTable.edit"/>
                <button id="removeBtn" action="dataProductsTable.remove"/>
            </buttonsPanel>
        </table>
        <fragment screen="simi_FilterFragment">
            <properties>
                <property name="dataLoader" ref="dataProductsDl"/>
                <property name="inputPrompt" value="Filtern nach Kennung und Titel"/>
            </properties>
        </fragment>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
