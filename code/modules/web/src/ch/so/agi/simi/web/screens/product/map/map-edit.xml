<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://mapEdit.caption"
        focusComponent="form"
        messagesPack="ch.so.agi.simi.web.screens.product.map">
    <data>
        <instance id="mapDc"
                  class="ch.so.agi.simi.entity.product.Map">
            <view extends="_local">
                <property name="pubScope" view="_minimal">
                    <property name="displayText"/>
                    <property name="defaultValue"/>
                    <property name="forMap"/>
                    <property name="sort"/>
                </property>
                <property name="singleActors" view="_minimal">
                    <property name="singleActor" view="_minimal"/>
                    <property name="sort"/>
                    <property name="visible"/>
                </property>
            </view>
            <loader/>
            <collection id="singleActorsDc" property="singleActors"/>
        </instance>
    </data>
    <dialogMode height="auto"
                width="80%"
                modal="true"
                forceDialog="true"/>
    <layout expand="scrollBox" spacing="true">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="mapDc">
                <column width="350px">
                    <textField id="identifierField" property="identifier"/>
                    <textField id="titleField" property="title"/>
                    <pickerField id="pubScopeField" property="pubScope">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <dateField id="releasedAtField" property="releasedAt"/>
                    <textField id="releasedThroughField" property="releasedThrough"/>
                    <textArea id="synonymsField" property="synonyms" rows="2"/>
                    <textArea id="keywordsField" property="keywords" rows="2"/>
                    <checkBox id="backgroundField" property="background"/>
                    <textField id="wgcUrlValueField" property="wgcUrlValue"/>
                    <textArea id="remarksField" property="remarks" rows="5"/>
                </column>
            </form>
            <groupBox id="singleActorsBox" caption="msg://ch.so.agi.simi.entity.product/ProductList.singleActors">
                <table id="singleActorsTable" dataContainer="singleActorsDc" width="100%" height="200px">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="singleActor.identifier"/>
                        <column id="singleActor.title"/>
                        <column id="visible"/>
                        <column id="sort"/>
                    </columns>
                    <buttonsPanel>
                        <button action="singleActorsTable.create"/>
                        <button action="singleActorsTable.edit"/>
                        <button action="singleActorsTable.remove"/>
                    </buttonsPanel>
                </table>
            </groupBox>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
