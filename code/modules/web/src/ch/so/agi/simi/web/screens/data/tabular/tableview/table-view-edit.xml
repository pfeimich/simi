<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://tableViewEdit.caption"
        focusComponent="form"
        messagesPack="ch.so.agi.simi.web.screens.data.tabular.tableview">
    <data>
        <instance id="tableViewDc"
                  class="ch.so.agi.simi.entity.data.tabular.TableView">
            <view extends="_local">
                <property name="postgresTable" view="_minimal"/>
                <property name="pubScope" view="_minimal"/>
                <property name="isStyleServerFilled"/>
                <property name="isStyleDesktopFilled"/>
            </view>
            <loader/>
        </instance>
        <collection id="pubScopesDc"
                    class="ch.so.agi.simi.entity.DataProduct_PubScope"
                    view="_local">
            <loader id="pubScopesDl">
                <query>
                    <![CDATA[select e from simi_DataProduct_PubScope e order by e.sort]]>
                    <condition>
                        <c:jpql>
                            <c:where>e.forDSV = true</c:where>
                        </c:jpql>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="80%"
                width="80%"
                modal="true"
                forceDialog="true"/>
    <layout expand="scrollBox" spacing="true">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="tableViewDc">
                <column width="350px">
                    <pickerField id="postgresTableField" property="postgresTable" editable="false"/>

                    <checkBox id="rawDownloadField" property="rawDownload"/>
                    <textField id="nameField" property="name"/>
                    <textField id="whereClauseField" property="whereClause"/>
                    <textField id="geomFieldNameField" property="geomFieldName"/>
                    <checkBox id="wgcEditField" property="wgcEdit"/>

                    <lookupField id="searchTypeField" property="searchType"/>
                    <textField id="searchFacetField" property="searchFacet"/>
                    <textField id="searchFilterWordField" property="searchFilterWord"/>

                    <hbox caption="Style Server">
                        <checkBox id="isStyleServerFilledField" property="isStyleServerFilled" align="MIDDLE_CENTER" editable="false"/>
                        <button id="downloadStyleServerBtn" caption="Download"/>
                        <upload id="uploadStyleServerBtn" fileStoragePutMode="MANUAL"/>
                    </hbox>
                    <hbox caption="Style Desktop">
                        <checkBox id="isStyleDesktopFilledField" property="isStyleDesktopFilled" align="MIDDLE_CENTER" editable="false"/>
                        <button id="downloadStyleDesktopBtn" caption="Download"/>
                        <upload id="uploadStyleDesktopBtn" fileStoragePutMode="MANUAL"/>
                    </hbox>

                    <textField id="identifierField" property="identifier"/>
                    <textField id="titleField" property="title"/>
                    <lookupField id="pubScopeField" property="pubScope" optionsContainer="pubScopesDc"/>
                    <dateField id="releasedAtField" property="releasedAt"/>
                    <textField id="releasedThroughField" property="releasedThrough"/>
                    <textArea id="synonymsField" property="synonyms" rows="2"/>
                    <textArea id="keywordsField" property="keywords" rows="2"/>
                    <textArea id="remarksField" property="remarks" rows="5"/>
                </column>
            </form>
        </scrollBox>

        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
