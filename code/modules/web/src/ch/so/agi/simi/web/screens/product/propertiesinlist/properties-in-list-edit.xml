<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://propertiesInListEdit.caption"
        focusComponent="form"
        messagesPack="ch.so.agi.simi.web.screens.product.propertiesinlist">
    <data>
        <instance id="propertiesInListDc"
                  class="ch.so.agi.simi.entity.product.PropertiesInList">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="propertiesInListDc">
            <column width="350px">
                <textField id="sortField" property="sort"/>
                <textField id="transparencyField" property="transparency"/>
                <checkBox id="visibleField" property="visible"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
