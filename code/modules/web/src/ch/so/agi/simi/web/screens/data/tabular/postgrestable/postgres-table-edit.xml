<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://postgresTableEdit.caption"
        focusComponent="form"
        messagesPack="ch.so.agi.simi.web.screens.data.tabular.postgrestable">
    <data>
        <instance id="postgresTableDc"
                  class="ch.so.agi.simi.entity.data.tabular.PostgresTable">
            <view extends="_local">
                <property name="modelSchema" view="_minimal">
                    <property name="schemaName"/>
                    <property name="postgresDB" view="_minimal">
                        <property name="dbName"/>
                    </property>
                </property>
                <property name="tableViews" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="AUTO"
                width="80%"
                modal="true"
                forceDialog="true"/>
    <layout expand="scrollBox" spacing="true">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="postgresTableDc">
                <column width="350px">
                    <textArea id="descriptionModelField" property="descriptionModel" rows="5" editable="false"/>
                    <textArea id="descriptionOverrideField" property="descriptionOverride" rows="5"/>
                    <textField id="idFieldNameField" property="idFieldName"/>

                    <textField id="tableNameField" property="tableName" editable="false"/>
                    <pickerField id="modelSchemaField" property="modelSchema" editable="false"/>
                    <textArea id="remarksField" property="remarks" rows="5" editable="false"/>

                    <dateField id="catSyncStampField" property="catSyncStamp" editable="false"/>
                    <textField id="geoFieldNameField" property="geoFieldName" editable="false"/>
                    <textField id="geoTypeField" property="geoType" editable="false"/>
                    <textField id="geoEpsgCodeField" property="geoEpsgCode" editable="false"/>
                </column>
            </form>
        </scrollBox>
        <button id="readFromServiceBtn" caption="Lesen von Service" align="MIDDLE_RIGHT" stylename="friendly"/>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
