<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://postgresTableEdit.caption"
        focusComponent="form"
        messagesPack="ch.so.agi.simi.web.screens.data.tabular.postgrestable">
    <data>
        <instance id="postgresTableDc"
                  class="ch.so.agi.simi.entity.data.tabular.PostgresTable">
            <view extends="_local">
                <property name="modelSchema" view="_minimal">
                    <property name="schemaName"/>
                    <property name="postgresDB" view="_minimal">
                        <property name="dbName"/>
                    </property>
                </property>
                <property name="tableViews" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="scrollBox" spacing="true">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="postgresTableDc">
                <column width="350px">
                    <textArea id="remarksField" property="remarks" rows="5"/>
                    <textArea id="descriptionField" property="description" rows="5"/>
                    <textField id="tableNameField" property="tableName"/>
                    <textField id="idFieldNameField" property="idFieldName"/>
                    <pickerField id="modelSchemaField" property="modelSchema">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <textArea id="descriptionModelField" property="descriptionModel" rows="5"/>
                    <textArea id="descriptionOverrideField" property="descriptionOverride" rows="5"/>
                    <dateField id="catSyncStampField" property="catSyncStamp"/>
                    <textField id="geoFieldNameField" property="geoFieldName"/>
                    <textField id="geoTypeField" property="geoType"/>
                    <textField id="geoEpsgCodeField" property="geoEpsgCode"/>
                </column>
            </form>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
