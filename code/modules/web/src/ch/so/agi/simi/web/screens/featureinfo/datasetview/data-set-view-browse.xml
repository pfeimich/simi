<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://dataSetViewBrowse.caption"
        focusComponent="dataSetViewsTable"
        messagesPack="ch.so.agi.simi.web.screens.product">
    <data readOnly="true">
        <collection id="dataSetViewsDc"
                    class="ch.so.agi.simi.entity.product.DataSetView">
            <view extends="_local"/>
            <loader id="dataSetViewsDl">
                <query>
                    <![CDATA[select e from product_DataSetView e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="dataSetViewsTable"
            spacing="true">
        <groupTable id="dataSetViewsTable"
                    width="100%"
                    dataContainer="dataSetViewsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="t_dispName"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="dataSetViewsTable.create"/>
                <button id="editBtn" action="dataSetViewsTable.edit"/>
                <button id="removeBtn" action="dataSetViewsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
