<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://featureInfoEdit.caption"
        focusComponent="form"
        messagesPack="ch.so.agi.simi.web.screens.featureinfo.featureinfo">
    <data>
        <instance id="featureInfoDc"
                  class="ch.so.agi.simi.entity.featureinfo.FeatureInfo">
            <view extends="_local">
                <property name="layerRelation" view="_minimal">
                    <property name="relation"/>
                    <property name="featureInfo" view="_minimal"/>
                    <property name="dataSetView" view="_minimal"/>
                </property>
            </view>
            <loader/>
            <collection id="layerRelationDc" property="layerRelation"/>
        </instance>
    </data>
    <dialogMode height="60%"
                width="60%"
                modal="true"
                forceDialog="true"
                resizable="true"/>
    <layout expand="splitPanel" spacing="true">
        <form id="form" dataContainer="featureInfoDc">
            <column width="350px">
                <textArea id="sqlQueryField" property="sqlQuery" rows="5"/>
                <textField id="pyModuleNameField" property="pyModuleName"/>
                <textArea id="remarksField" property="remarks" rows="5"/>
            </column>
        </form>
        <split id="splitPanel" orientation="vertical" width="100%">
            <sourceCodeEditor id="displayTemplateField" property="displayTemplate" mode="XML" handleTabKey="true" width="100%" height="100%" dataContainer="featureInfoDc"/>
            <groupBox id="layerRelationBox" caption="msg://ch.so.agi.simi.entity.featureinfo/FeatureInfo.layerRelation"
                      expand="layerRelationTable">
                <table id="layerRelationTable" dataContainer="layerRelationDc" width="100%" editable="true">
                    <actions>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="relation"/>
                        <column id="dataSetView" editable="true"/>
                    </columns>
                    <buttonsPanel>
                        <button id="addLayerRelationBtn" icon="ADD_ACTION" caption="Erstellen" primary="true"/>
                        <button action="layerRelationTable.remove"/>
                    </buttonsPanel>
                </table>
            </groupBox>
        </split>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" caption="Ãœbernehmen" icon="OK" primary="true"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
