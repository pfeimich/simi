<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://layerListEdit.caption"
        focusComponent="form"
        messagesPack="ch.so.agi.simi.web.screens.product.layerlist">
    <data>
        <instance id="layerListDc"
                  class="ch.so.agi.simi.entity.product.LayerList">
            <view extends="_local">
                <property name="pubScope" view="_minimal">
                    <property name="displayText"/>
                    <property name="defaultValue"/>
                    <property name="forGroup"/>
                    <property name="sort"/>
                </property>
                <property name="singleActors" view="_minimal">
                    <property name="visible"/>
                    <property name="singleActor" view="_minimal"/>
                    <property name="sort"/>
                </property>
            </view>
            <loader/>
            <collection id="singleActorsDc" property="singleActors"/>
        </instance>
    </data>
    <dialogMode height="AUTO"
                width="80%"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="layerListDc">
            <column width="350px">
                <textField id="identifierField" property="identifier"/>
                <pickerField id="pubScopeField" property="pubScope">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="keywordsField" property="keywords"/>
                <textArea id="remarksField" property="remarks" rows="5"/>
                <textField id="synonymsField" property="synonyms"/>
                <textField id="titleField" property="title"/>
                <dateField id="releasedAtField" property="releasedAt"/>
                <textField id="releasedThroughField" property="releasedThrough"/>
            </column>
        </form>
        <groupBox id="singleActorsBox" caption="msg://ch.so.agi.simi.entity.product/ProductList.singleActors">
            <table id="singleActorsTable" dataContainer="singleActorsDc" width="100%" height="200px">
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="visible"/>
                    <column id="singleActor"/>
                    <column id="sort"/>
                </columns>
                <buttonsPanel>
                    <button action="singleActorsTable.create"/>
                    <button action="singleActorsTable.edit"/>
                    <button action="singleActorsTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
